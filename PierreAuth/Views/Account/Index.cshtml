@{
    Layout = "_Layout";
}

@using System.Security.Claims 

<h1>Authentication with Identity</h1>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        @Html.ActionLink("See all Treats", "Index", "Treats")<br>
        @Html.ActionLink("See all Flavors", "Index", "Flavors")<br>
        <input type="submit" class="btn btn-dark" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
    
}