@{
  Layout = "_Layout";
}

@using PierreAuth.Models;
@model List<PierreAuth.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 

@foreach (Treat Treat in Model)
{
  @Html.ActionLink($"{Treat.Description}", "Details", new { id = Treat.TreatId })<br>
}


@Html.ActionLink("Add new Treat", "Create")<br>
@Html.ActionLink("Home", "Index", "Home")<br>